@inject ToolState ToolState

<div class="btn-group-vertical">
    <button type="button"
            class="btn btn-secondary @(ToolState.IsView ? "active" : "")"
            onclick="@ToolState.ToView">
        View
    </button>
    <button type="button"
            class="btn btn-secondary @(ToolState.IsTerrain ? "active" : "")"
            onclick="@ToolState.ToTerrain">
        Terrain
    </button>
</div>

